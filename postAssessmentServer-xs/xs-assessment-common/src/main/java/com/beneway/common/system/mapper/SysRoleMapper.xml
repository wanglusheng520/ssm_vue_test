<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.beneway.common.system.dao.sys_role.SysRoleDao">
    <resultMap id="res" type="com.beneway.common.system.entity.sys_role.SysRole" />

    <select id="queryPage" resultType="com.beneway.common.system.entity.sys_role.vo.SysRoleVo">
        select
            sr.*
        from sys_role as sr
        <where>
            <include refid="del"></include>
            <if test="params.title != null and params.title != ''">
                and sr.title like concat('%', #{params.title}, '%')
            </if>
        </where>
        order by sr.id
    </select>

    <sql id="del">
        and sr.deleted = 0
    </sql>

</mapper>
