<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beneway.common.dao.system.menu.MenuDao">

    <resultMap id="menu" type="com.beneway.common.entity.system.menu.Menu"></resultMap>
    <select id="getAllMenus" resultMap="menu">
        SELECT * FROM menu ORDER BY pid ASC	, sequence+0 ASC
    </select>

    <select id="getMaxByPid" parameterType="Integer" resultType="String">
        SELECT MAX(sequence)+1 FROM menu	WHERE pid = #{pid}
    </select>

</mapper>